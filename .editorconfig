root = true

[*]
end_of_line = lf
insert_final_newline = true

[{*.lua,*.rockspec,.busted,.luacheckrc}]
indent_style = space
indent_size = 3
max_line_length = 120

# StyLua keys
collapse_simple_statement = never
space_after_functions = definitions

[*.ftl]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2
